<h1> <%= @cat.name %> </h1>

  <table>
    <tr>
      <th> Age </th>
      <th> Sex </th>
      <th> Color </th>
      <th> Description </th>
    </tr>
    <tr>
      <td> <%= @cat.age %> </td>
      <td> <%= @cat.sex %> </td>
      <td> <%= @cat.color %> </td>
      <td> <%= @cat.description %> </td>
    </tr>
  </table>

<h2>Rental Requests</h2>
  <table>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>

    <% @cat.cat_rental_requests.order("start_date").each do |req| %>
    <tr>
      <td><%= req.start_date %></td>
      <td><%= req.end_date %></td>
      <td>
        <% if req.pending? %>
          <%= button_to "Approve", approve_cat_rental_request_url(req) %>
          <%= button_to "Deny", deny_cat_rental_request_url(req) %>
        <% else %>
          <%= req.status %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
